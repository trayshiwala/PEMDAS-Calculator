<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/navy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="16dp"

        android:gravity="center">

        <Spinner
            android:id="@+id/historySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:prompt="@string/your_math_history" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/solutionTitle"
            android:textColor="@color/lightGrey"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/solutionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:padding="64dp"
            android:background="@color/lightGrey"/>

        <Button
            android:id="@+id/btn_solve_another"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:text="@string/anotherProblemLabel"
            android:backgroundTint="@color/maroon"/>

            android:padding="16dp"
            android:text="Let's Solve Another Problem!" />

        <Button
            android:id="@+id/btn_clear_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:text="Clear History" />

    </LinearLayout>
</ScrollView>